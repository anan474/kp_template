          <td>${data.nama}</td>
          <td>${data.jenis}</td>
          <td>${data.jml_core}</td>
          <td>${data.tipe_a}</td>
          <td>${data.id_a}</td>
          <td>${data.tipe_b}</td>
          <td>${data.id_b}</td>
