<div class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5">
  <div class="bg-blue-800 p-2 shadow text-xl text-white">
    <h3 class="font-bold pl-2">Input Data Titik ODC / OTB</h3>
  </div>

  <div class="flex flex-row flex-wrap flex-grow mt-2">
    <div class="w-full md:w-full xl:w-full p-3">
      <!--Table Card-->
      <div class="bg-white border-transparent rounded-lg shadow-lg">
        <div
          class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2"
        >
          <h5 class="font-bold uppercase text-gray-600">Table</h5>
        </div>
        <div class="p-5">
          <table class="w-full p-5 text-gray-700">
            <thead>
              <tr>
                <th class="text-left text-blue-900">No</th>
                <th class="text-left text-blue-900">Nama</th>
                <th class="text-left text-blue-900">Tipe</th>
                <th class="text-left text-blue-900">Jml Slot</th>
                <th class="text-left text-blue-900">Lokasi</th>
                <th class="text-left text-blue-900">Kode Pengadaan</th>
                <th class="text-left text-blue-900">Objek Peta</th>
                <th class="text-left text-blue-900">Aksi</th>
              </tr>
            </thead>

            <tbody id="data_tabel">
              <tr>
                <td colspan="5">Loading...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!--/table Card-->

      <!-- form isian -->
      <div class="flex flex-row flex-wrap flex-grow mt-2">
        <div class="w-full md:w-full xl:w-full p-3">
          <div class="bg-white border-transparent rounded-lg shadow-lg">
            <div
              class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2"
            >
              <h5 class="font-bold uppercase text-gray-600">Data Baru</h5>
            </div>
            <div class="p-5">
              <form class="w-full" method="post" action="/api/odc_otb">
                <div class="flex flex-wrap -mx-3 mb-6">
                  <div class="w-full md:w-2/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="nama"
                    >
                      Nama
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                      id="nama"
                      name="nama"
                      type="text"
                      placeholder="Nama"
                    />
                    <!-- <p class="text-red-500 text-xs italic">
                      Please fill out this field.
                    </p> -->
                  </div>
                  <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="tipe"
                    >
                      Tipe
                    </label>
                    <div class="relative">
                      <select
                        class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                        id="tipe"
                        name="tipe"
                      >
                        <option>ODC</option>
                        <option>OTB</option>
                      </select>
                      <div
                        class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
                      >
                        <svg
                          class="fill-current h-4 w-4"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 20 20"
                        >
                          <path
                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                          />
                        </svg>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6">
                  <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="jml_slot"
                    >
                      Jumlah Slot
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="jml_slot"
                      name="jml_slot"
                      type="number"
                      min="0"
                      placeholder="jml_slot"
                    />
                    <!-- <p class="text-gray-600 text-xs italic">
                      Make it as long and as crazy as you'd like
                    </p> -->
                  </div>
                  <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="lokasi"
                    >
                      Lokasi
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="lokasi"
                      name="lokasi"
                      type="text"
                      placeholder="lokasi"
                    />
                    <!-- <p class="text-gray-600 text-xs italic">
                      Make it as long and as crazy as you'd like
                    </p> -->
                  </div>
                  <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="kode_pengadaan"
                    >
                      Kode Pengadaan
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="kode_pengadaan"
                      name="kode_pengadaan"
                      type="text"
                      placeholder="Kode Pengadaan"
                    />
                  </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6">
                  <div class="w-full md:w-2/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="objek_peta"
                    >
                      Objek Peta
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="objek_peta"
                      name="objek_peta"
                      type="text"
                      placeholder="Objek peta"
                    />
                  </div>
                  <div class="w-full md:w-1/3 px-3 mb-6 mt-6 md:mb-0">
                    <button
                      type="button"
                      class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                      onclick="ambil_data_titik(document.getElementById('objek_peta').value)"
                    >
                      Cek
                    </button>
                  </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6">
                  <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="lat"
                    >
                      Latitude
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="lat"
                      name="lat"
                      type="text"
                      placeholder="-"
                      disabled
                    />
                  </div>
                  <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="lon"
                    >
                      Longitude
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="lon"
                      name="lon"
                      type="text"
                      placeholder="-"
                      disabled
                    />
                  </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6">
                  <div class="w-full px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    >
                      Peta
                    </label>
                    <div class="p-5" id="map" style="height: 200px"></div>
                  </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6 justify-end">
                  <div class="w-full md:w-1/3 px-3 mb-6 mt-6 md:mb-0">
                    <button
                      type="submit"
                      class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    >
                      Submit
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- form isian -->
    </div>
  </div>
</div>

<script>
  window.onload = function () {
    const data_tabel = document.getElementById("data_tabel");
    let isi = "";
    fetch("/api/odc_otb")
      .then((hasil) => hasil.json())
      .then((hasil) => {
        hasil.forEach((data, index) => {
          isi += `
        <tr>
          <td>${index + 1}</td>
          <td>${data.nama}</td>
          <td>${data.tipe}</td>
          <td>${data.jml_slot}</td>
          <td>${data.lokasi}</td>
          <td>${data.kode_pengadaan}</td>
          <td><a href="http://10.128.0.207/node/${
            data.objek_peta
          }" title="buka di peta" target="_black" class="text-blue-800 underline" >${
            data.objek_peta
          }</a></td>
          <td>
            <button onclick="hapus(${
              data.id
            })" type="button" class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" >
              Hapus
            </button>
          </td>
        </tr>`;
        });
        data_tabel.innerHTML = isi;
      });
  };

  function ambil_data_titik(id) {
    if (id && !isNaN(id)) {
      fetch(`/api/odc_otb/data_titik/${id}`)
        .then((hasil) => hasil.json())
        .then((hasil) => {
          L.marker([hasil.lat, hasil.lon]).addTo(map);
          map.setView([hasil.lat, hasil.lon], 18);
          document.getElementById("lat").value = hasil.lat;
          document.getElementById("lon").value = hasil.lon;
        });
    }
  }

  function hapus(id) {
    fetch(`/api/odc_otb/${id}`, {
      method: "DELETE",
    }).then((hasil) => {
      location.reload();
    });
  }

  var map = L.map("map").setView([-0.06081, 109.34501], 18);

  L.tileLayer("http://10.128.0.207:4001/hot/{z}/{x}/{y}.png", {
    attribution:
      '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
  }).addTo(map);

  var hash = L.hash(map);
</script>
