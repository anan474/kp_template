<div class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5">
    <div class="bg-blue-800 p-2 shadow text-xl text-white">
        <h3 class="font-bold pl-2">Input Data Tiang</h3>
    </div>

    <div class="flex flex-row flex-wrap flex-grow mt-2">
        <div class="w-full md:w-full xl:w-full p-3">
            <!--Table Card-->
            <div class="bg-white border-transparent rounded-lg shadow-lg">
                <div class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2">
                    <h5 class="font-bold uppercase text-gray-600">Data Tiang</h5>
                </div>
                <div class="p-5 ">
                    <!-- <table class="w-full p-5 text-gray-700"> -->
                    <table id="example" class="stripe hover"
                        style="width:100%; padding-top: 1em;  padding-bottom: 1em;">
                        <thead>
                            <tr>
                                <th data-priority="1">No</th>
                                <th data-priority="2">Nama</th>
                                <th data-priority="3">Lokasi</th>
                                <th data-priority="4">Objek Peta</th>
                                <th data-priority="5">Latitude</th>
                                <th data-priority="6">Longitude</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody id="data_tabel">
                            <tr>
                                <td>Loading ...</td>
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>
            <!-- form isian -->
            <div class="flex flex-row flex-wrap flex-grow mt-2" id="form_edit">
                <div class="w-full md:w-full xl:w-full p-3">
                    <div class="bg-white border-transparent rounded-lg shadow-lg">
                        <div class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2">
                            <h5 class="font-bold uppercase text-gray-600">Data Baru</h5>
                        </div>
                        <div class="p-5">
                            <form class="w-full" method="post" action="/api/tiang">
                                <div class="flex flex-wrap -mx-3 mb-6">
                                    <div class="w-full px-3">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="nama">
                                            Nama
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="nama" name="nama" type="text" placeholder="nama" />
                                    </div>
                                </div>


                                <div class="flex flex-wrap -mx-3 mb-6">
                                    <div class="w-full px-3">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="lokasi">
                                            lokasi
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="lokasi" name="lokasi" type="text" placeholder="lokasi" />
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-6">
                                    <div class="w-full md:w-2/3 px-3 mb-6 md:mb-0">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="objek_peta_id">
                                            Objek Peta
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="objek_peta_id" name="objek_peta_id" type="text"
                                            placeholder="Objek peta" />
                                    </div>
                                    <div class="w-full md:w-1/3 px-3 mb-6 mt-6 md:mb-0">
                                        <button type="button"
                                            class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                            onclick="ambil_data_titik(document.getElementById('objek_peta_id').value)">
                                            Cek
                                        </button>
                                    </div>
                                </div>

                                <div class="flex flex-wrap -mx-3 mb-6">
                                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="lat">
                                            Latitude
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="lat" name="lat" type="text" placeholder="-" readonly />
                                    </div>
                                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="lon">
                                            Longitude
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="lon" name="lon" type="text" placeholder="-" readonly />
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-6">
                                    <div class="w-full px-3 mb-6 md:mb-0">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
                                            Peta
                                        </label>
                                        <div class="p-5" id="map" style="height: 300px"></div>
                                    </div>
                                </div>
                                <div class="flex flex-wrap -mx-3 mb-6 justify-end">
                                    <div class="w-full md:w-1/3 px-3 mb-6 mt-6 md:mb-0">
                                        <button type="submit"
                                            class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                                            Submit
                                        </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>

            </div>
          </div>
        </div>
      </div>
      <!-- form isian -->
    </div>
  </div>
</div>

<script>
  window.onload = function () {
    const data_tabel = document.getElementById("data_tabel");
    let isi = "";
    fetch("/jaringan_untan/api/tiang")
      .then((hasil) => hasil.json())
      .then((hasil) => {
        hasil.forEach((data, index) => {
          isi += `
          <tr>
            <td>${index + 1}</td>
            <td>${data.nama}</td>
            <td>${data.lokasi}</td>             
            <td><a href="http://203.24.50.138:8080/node/${data.objek_peta_id
                        }" title="bunpm run devka di peta" target="_black" class="text-blue-800 underline" >${data.objek_peta_id
                        }</a>
            </td>          
            <td>${data.lat}</td>            
            <td>${data.lon}</td>            
            <td>
              <button  onclick="if(confirm('Hapus Data ini ?')){ hapus(${
                data.id
              }) }" type="button" class="bg-red-500 w-24 md:w-autohover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" >
                Hapus
              </button>
              <a href="/jaringan_untan/tiang/edit_tiang/${data.id}">
              <button  type="button" class="bg-blue-500 w-24 md:w-autohover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" >
                Edit</button>
                </a>
            </td>
          </tr>`;
        });
        data_tabel.innerHTML = isi;
      });
  };

    function ambil_data_titik(id) {
        if (id && !isNaN(id)) {
            fetch(`/api/tiang/data_titik/${id}`)
                .then((hasil) => hasil.json())
                .then((hasil) => {
                    L.marker([hasil.lat, hasil.lon]).addTo(map);
                    map.setView([hasil.lat, hasil.lon], 18);
                    document.getElementById("lat").value = hasil.lat;
                    document.getElementById("lon").value = hasil.lon;
                });
        }
    }



    function hapus(id) {
        fetch(`/api/tiang/${id}`, {
            method: "DELETE",
        }).then((hasil) => {
            location.reload();
        });
    }

    var map = L.map('map').setView([-0.06081, 109.34501], 18);

    L.tileLayer('http://203.24.50.138:8080/hot/hot/{z}/{x}/{y}.png', {
        attribution:
            '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
    }).addTo(map);

    var hash = L.hash(map);
</script>
