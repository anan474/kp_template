<div class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5">
  <div class="bg-blue-800 p-2 shadow text-xl text-white">
    <h3 class="font-bold pl-2">Input Data</h3>
  </div>

  <div class="flex flex-row flex-wrap flex-grow mt-2">
    <div class="w-full md:w-full xl:w-full p-3">
      <!--Table Card-->
      <div class="bg-white border-transparent rounded-lg shadow-lg">
        <div
          class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2"
        >
          <h5 class="font-bold uppercase text-gray-600">Table</h5>
        </div>
        <div class="p-5">
          <table class="w-full p-5 text-gray-700">
            <thead>
              <tr>
                <th class="text-left text-blue-900">No</th>
                <th class="text-left text-blue-900">Nama</th>
                <th class="text-left text-blue-900">Jenis</th>
                <th class="text-left text-blue-900">Tiang</th>
                <th class="text-left text-blue-900">Kode Pengadaan</th>
                <th class="text-left text-blue-900">Aksi</th>
              </tr>
            </thead>

            <tbody id="data_tabel">
              <tr>
                <td colspan="5">Loading...</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!--/table Card-->

      <!-- form isian -->
      <div class="flex flex-row flex-wrap flex-grow mt-2" id="form_edit">
        <div class="w-full md:w-full xl:w-full p-3">
          <div class="bg-white border-transparent rounded-lg shadow-lg">
            <div
              class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2"
            >
              <h5 class="font-bold uppercase text-gray-600">Data Baru</h5>
            </div>
            <div class="p-5">
              <form class="w-full" method="post" action="atribut_tiang">
                <div class="flex flex-wrap -mx-3 mb-6">
                  <div class="w-full px-3">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="nama"
                    >
                      Nama
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="nama"
                      name="nama"
                      type="text"
                      placeholder="nama"
                    />
                    <!-- <p class="text-gray-600 text-xs italic">
                        Make it as long and as crazy as you'd like
                      </p> -->
                  </div>
                </div>

                <div class="flex flex-wrap -mx-3 mb-6">
                  <div class="w-full px-3">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="jenis"
                    >
                      Jenis
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="jenis"
                      name="jenis"
                      type="text"
                      placeholder="jenis"
                    />
                    <!-- <p class="text-gray-600 text-xs italic">
                        Make it as long and as crazy as you'd like
                      </p> -->
                  </div>
                </div>

                <div class="flex flex-wrap -mx-3 mb-2">
                  <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="tiang"
                    >
                      Tiang
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="tiang"
                      name="tiang"
                      type="text"
                      placeholder="Tiang"
                    />
                  </div>
                  <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    <label
                      class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                      for="kode_pengadaan"
                    >
                      Kode Pengadaan
                    </label>
                    <input
                      class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                      id="kode_pengadaan"
                      name="kode_pengadaan"
                      type="text"
                      placeholder="Kode Pengadaan"
                    />
                  </div>

                  <div class="w-full md:w-1/3 px-3 mb-6 mt-6 md:mb-0">
                    <button
                      type="submit"
                      class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    >
                      Submit
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- form isian -->
    </div>
  </div>
</div>

<script>
  window.onload = function () {
    const data_tabel = document.getElementById("data_tabel");
    let isi = "";
    fetch("/jaringan_untan/api/atribut_tiang")
      .then((hasil) => hasil.json())
      .then((hasil) => {
        hasil.forEach((data, index) => {
          isi += `
          <tr>
            <td>${index + 1}</td>
            <td>${data.nama}</td>
            <td>${data.jenis}</td>
            <td>${data.tiang}</td>
            <td>${data.kode_pengadaan}</td>
            <td>
              <button  onclick="if(confirm('Hapus Data ini ?')){ hapus(${
                data.id
              })}" type="button" class="bg-red-500 w-24 md:w-auto hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" >
                Hapus
              </button>
              <a href="#form_edit"><button  onclick="edit(${
                data.id
              })" type="button" class="bg-blue-500 w-24 md:w-auto hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" >
                Edit</button></a>
            </td>
          </tr>`;
        });
        data_tabel.innerHTML = isi;
      });
  };

  const form_edit = document.getElementById("form_edit");
  let isi_form = "";
  function edit(id) {
    fetch(`/jaringan_untan/api/atribut_tiang/${id}`)
      .then((hasil) => hasil.json())
      .then((hasil) => {
        isi_form = `
            <div class="w-full md:w-full xl:w-full p-3" >
                    <div class="bg-white border-transparent rounded-lg shadow-lg">
                        <div class="bg-gray-400 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2">
                            <h5 class="font-bold uppercase text-gray-600">Edit Data</h5>
                        </div>
                        <div class="p-5">
                            <form class="w-full" method="post" action="atribut_tiang/edit">
                                <input type="hidden" name="id" value="${hasil.id}">
                                <div class="flex flex-wrap -mx-3 mb-6">
                                    <div class="w-full px-3">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="nama">
                                            Nama
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="nama" name="nama" type="text" placeholder="nama" value="${hasil.nama}" />
                                        <!-- <p class="text-gray-600 text-xs italic">
                        Make it as long and as crazy as you'd like
                      </p> -->
                                    </div>
                                </div>


                                <div class="flex flex-wrap -mx-3 mb-6">
                                    <div class="w-full px-3">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="jenis">
                                            Jenis
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="jenis" name="jenis" type="text" placeholder="jenis" value="${hasil.jenis}" />
                                        <!-- <p class="text-gray-600 text-xs italic">
                        Make it as long and as crazy as you'd like
                      </p> -->
                                    </div>
                                </div>

                                <div class="flex flex-wrap -mx-3 mb-2">
                                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="tiang">
                                            Tiang
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="tiang" name="tiang" type="text" placeholder="Tiang" value="${hasil.tiang}" />
                                    </div>
                                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                                        <label
                                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                                            for="kode_pengadaan">
                                            Kode Pengadaan
                                        </label>
                                        <input
                                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                            id="kode_pengadaan" name="kode_pengadaan" type="text"
                                            placeholder="Kode Pengadaan" value="${hasil.kode_pengadaan}" />
                                    </div>

                                    <div class="w-full md:w-1/3 px-3 mb-6 mt-6 md:mb-0">
                                        <button type="submit"
                                            class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            `;

        form_edit.innerHTML = isi_form;
      });
  }
  function hapus(id) {
    fetch(`/jaringan_untan/api/atribut_tiang/${id}`, {
      method: "DELETE",
    }).then((hasil) => {
      location.reload();
    });
  }
</script>
